  "repository": {
    "type": "git",
    "url": "https://github.com/d3/d3-scale.git"
  },
  "keywords": [
    "d3",
    "d3-module",
    "scale",
    "visualization"
  ],
  "license": "ISC",
  "author": {
    "name": "Mike Bostock",
    "url": "https://bost.ocks.org/mike"
  },
  "type": "module",
  "files": [
    "dist",
    "src/**/*.js"
  ],
  "module": "src/index.js",
  "main": "dist/d3-scale.min.cjs",
  "jsdelivr": "dist/d3-scale.min.js",
